            <li<?php if ($i % 3 == 0): ?> class="no-space"<?php endif; ?>>
                <div class="left">
                    <h3>
                        <?= $newsItem->title; ?>
                    </h3>
                </div>
                <div class="right">
                    <p><?= $newsItem->content; ?></p>
                </div>
