<h2><?= _('NEWS_LIST_TITLE'); ?></h2>

<?php if (count($spotlight) == 1): ?>
<a href="<?= $this->baseUrl(); ?>news/read/id/<?= $spotlight->id; ?>">
    <div class="spotlight">
        <div class="left">
            <h3>
                <?= $spotlight->title; ?>
            </h3>
            <?php if (isset($spotlight->illustrations[0])): ?>
            <img
